---
import SeeMoreLink from "@components/base/SeeMoreLink.astro";
import Image from "astro/components/Image.astro";

interface Props {
  image: {
    src: ImageMetadata;
    alt: string;
  };
  title: string;
  content: string;
  seeMoreHref: string;
}

const { image, title, content, seeMoreHref } = Astro.props;
---

<article class="glass-card">
  <Image src={image.src} alt={image.alt} class="image" loading="eager" />
  <div class="content">
    <h3>{title}</h3>
    <p>{content}</p>
    <SeeMoreLink href={seeMoreHref}>En savoir plus</SeeMoreLink>
  </div>
</article>

<style>
  h3 {
    color: var(--color-accent);
  }
  .glass-card {
    display: grid;
    grid-template-rows: auto 1fr;
  }
  .content {
    padding: var(--lg) var(--xl);
    display: grid;
    grid-template-rows: auto 1fr auto;
    gap: var(--md);
  }
  .image {
    width: 100%;
  }
</style>
