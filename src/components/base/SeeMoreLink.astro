---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a href={href} class="link">
	<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256">
		<path
			d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm29.66-93.66a8,8,0,0,1,0,11.32l-40,40a8,8,0,0,1-11.32-11.32L140.69,128,106.34,93.66a8,8,0,0,1,11.32-11.32Z"
		></path>
	</svg>
	<span class="link-text">
		<slot />
	</span>
</a>

<style>
	.link {
		justify-self: start;
		color: var(--color-accent);
		display: inline-flex;
		align-items: center;
		column-gap: var(--sm);
	}
	.link-text {
		position: relative;
	}
	.link-text::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 1px;
		width: 100%;
		background: currentColor;
		transition: transform 0.2s;
		transform: scaleX(0);
		transform-origin: left;
	}
	.link:hover .link-text::after {
		transform: scaleX(1);
	}
</style>
